<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/public/js/form_validation.js"></script>
<div class="flex-col">
    <div class="already">
        <h1>Welcome back!</h1>
        <h3>Please enter your username and password to continue:</h3>
    </div>
    {{#if error}}
    <div class="error-message" style="color: red; text-align: center; margin-bottom: 10px;">
        {{error}}
    </div>
    {{/if}}


    <div>
        <div class="centerForm">
            <div class="login">
                <form action="/user/login" method="POST" id="signin-form" name="signin-form">
                    <label for="user_name">Enter Username:</label>
                    <input type="text" id="user_name" name="user_name">
                    <br>
                    <label for="password">Enter Password:</label>
                    <input type="password" id="password" name="password">

                    <button type="submit" id="submit_button">Submit</button>
                </form>
            </div>
        </div>
        <div class="already">
            <a id="signuplink" href="/user/register">Click here to signup!</a>
        </div>
    </div>
</div>