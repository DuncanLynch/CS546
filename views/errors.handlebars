
{{!-- 404.handlebars - Error page for Rate My Classy website --}}

<div class="error-container">
  <div class="error-content">
    <h2 class="error-title">404 - Page Not Found</h2>
    <div class="error-image">
      <img src="/public/images/404.png" alt="Page not found illustration" onerror="this.style.display='none'">
    </div>
    <p class="error-message"> The page you're looking for doesn't exist or may have been moved.</p>
    
    <div class="error-actions">
      <a href="/" class="btn btn-primary">Return to Homepage</a>
      {{#if user}}
        <a href="/user/profile" class="btn btn-secondary">Go to Your Profile</a>
      {{/if}}
    </div>
</div>